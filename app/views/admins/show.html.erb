<div class="row">
  <h4>Hi <%= @admin.first_name %>!</h4>
  <h5>Students attending <%= @admin.dojo.name %></h5>

  <table>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td>
          <a href="/users/<%= student.id %>" data-method="delete">Delete</a> |
        <% if student.access == "t" %>
          <a href="/access/<%= student.id %>/deny">Remove Access</a>
        <% else %>
          <a href="/access/<%= student.id %>/allow">Allow Access</a>
        <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

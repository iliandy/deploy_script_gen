<h2>Welcome!</h2>
<!-- user login -->
<h3>Login</h3>
<form action="/sessions" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <div class="row">
    <div class="input-field col s4">
      <label>E-mail: </label>
      <input type="text" name="login[email]">
    </div>

    <div class="input-field col s4">
      <label>Password: </label>
      <input type="password" name="login[password]">
    </div>
  </div>

  <button class="btn waves-effect waves-light" type="submit" name="action">Login User
    <i class="material-icons right">send</i>
  </button>
</form>

<!-- user registration -->
<h3>Register</h3>
<form action="/users" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <div class="row">
    <div class="input-field col s8">
      <label>First Name: </label>
      <input type="text" name="user[first_name]">
    </div>
  </div>
  <div class="row">
    <div class="input-field col s8">
      <label>Last Name: </label>
      <input type="text" name="user[last_name]">
    </div>
  </div>
  <div class="row">
    <div class="input-field col s8">
      <label>E-mail: </label>
      <input type="text" name="user[email]">
    </div>
  </div>
  <div class="row">
    <div class="input-field col s8">
      <label>Password: </label>
      <input type="password" name="user[password]">
    </div>
  </div>
  <div class="row">
    <div class="input-field col s8">
      <label>Password Confirmation: </label>
      <input type="password" name="user[password_confirmation]">
    </div>
  </div>
  <div class="row">
    <div class="input-field col s8">
      <select name="user[dojo]">
      <% @dojos.each do |dojo| %>
        <option value="<%= dojo.id %>"><%= dojo.name %></option>
      <% end %>
      </select>
    </div>
  </div>

  <button class="btn waves-effect waves-light" type="submit" name="action">Register User
    <i class="material-icons right">send</i>
  </button>
</form>
